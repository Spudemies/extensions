{
    "manifest_version": 2,
    "name": "saucenao",
    "description": "Search by image via saucenao",
    "version": "1.0",
	"icons": {
		"16": "/icons/16x16_saucenao.png",
		"48": "/icons/48x48_saucenao.png"
	},

    "background": {
        "scripts": [
            "background.js"
        ],
		"persistent": false
    },

    "permissions": [
		"contextMenus",
		"tabs"
    ],
	
	"browser_specific_settings": {
		"gecko": {
			"id": "addon@example.com"
		}
	}
}